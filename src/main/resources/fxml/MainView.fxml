<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hylir.receipt.controller.MainController" spacing="15.0">
    <children>
        <!-- 标题栏 -->
        <HBox styleClass="title-bar" alignment="CENTER_LEFT">
            <children>
                <Label styleClass="title-label" text="回单采集终端 - Receipt Capture Agent"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- 状态指示灯 -->
                <HBox spacing="15.0" alignment="CENTER_RIGHT">
                    <children>
                        <HBox spacing="6.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="设备:" styleClass="version-label"/>
                                <Label fx:id="currentDeviceLabel" styleClass="version-label" text="GK122"/>
                            </children>
                        </HBox>
                        <HBox spacing="6.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="状态:" styleClass="version-label"/>
                                <Label fx:id="statusLabel" styleClass="version-label" text="就绪"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <Button fx:id="settingsButton" mnemonicParsing="false" styleClass="icon-button" text="⚙️ 设置"/>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" top="12.0" bottom="12.0"/>
            </padding>
        </HBox>

        <!-- 主内容区域 -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- 左侧：实时影像 -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- 标题 -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label styleClass="section-label" text="实时影像"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <ComboBox fx:id="deviceComboBox" prefWidth="180.0" promptText="选择设备"/>
                                <Button fx:id="previewButton" mnemonicParsing="false"
                                        styleClass="secondary-button" text="预览" prefWidth="80.0"/>
                                <Button fx:id="resetButton" mnemonicParsing="false"
                                        styleClass="secondary-button" text="重置" prefWidth="80.0" disable="true"/>
                            </children>
                        </HBox>
                        
                        <!-- 影像容器 -->
                        <Pane fx:id="imagePane" styleClass="image-container" VBox.vgrow="ALWAYS">
                            <children>
                                <ImageView fx:id="imageView" styleClass="image-view"/>
                            </children>
                        </Pane>
                        
                        <!-- 进度条 -->
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <Label text="进度:" styleClass="control-label"/>
                            <ProgressBar fx:id="progressBar" HBox.hgrow="ALWAYS" progress="0.0"/>
                        </HBox>
                    </children>
                </VBox>

                <!-- 右侧：扫描历史和操作日志 -->
                <VBox spacing="10.0" prefWidth="350.0" minWidth="300.0" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- 使用 SplitPane 分割，比例 2:1 -->
                        <SplitPane dividerPositions="0.666" orientation="VERTICAL" VBox.vgrow="ALWAYS">
                            <items>
                                <!-- 扫描历史（占2/3） -->
                                <VBox spacing="8.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                                            <children>
                                                <Label styleClass="section-label" text="扫描历史"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                            </children>
                                        </HBox>
                                        
                                        <!-- 扫描历史列表 -->
                                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" 
                                                    hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                                                    styleClass="history-scroll">
                                            <content>
                                                <FlowPane fx:id="successListContainer" hgap="10.0" vgap="10.0" 
                                                          styleClass="history-list" alignment="TOP_LEFT">
                                                    <padding>
                                                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                                                    </padding>
                                                </FlowPane>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                </VBox>
                                
                                <!-- 操作日志（占1/3） -->
                                <VBox spacing="8.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                                            <children>
                                                <Label styleClass="section-label" text="操作日志"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                            </children>
                                        </HBox>
                                        
                                        <!-- 操作日志文本区域 -->
                                        <TextArea fx:id="statusArea" editable="false" wrapText="true"
                                                  styleClass="text-area" VBox.vgrow="ALWAYS"/>
                                    </children>
                                </VBox>
                            </items>
                        </SplitPane>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" top="0.0" bottom="0.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
